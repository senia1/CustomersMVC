
@model IEnumerable<DataAccessLayer.Entities.Customer>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller ="Customer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Customer
            </a>
        </div>
    </div>
    <br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
                <th>
                    Id
                </th>
            <th>
                Name
            </th>
            <th>
                City
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                    <td width="20%">
                        @obj.Id
                    </td>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.City
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                       
                </td>
            </tr>
        }
    </tbody>
</table>
</div>





